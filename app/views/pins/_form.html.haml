= form_for @pin, html: {id: "pin_form"} do |f|
  - if @pin.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pin.errors.count, "error")} prohibited this pin from being saved:"
      %ul
        - @pin.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :accuracy
    = f.number_field :accuracy
  .field
    = f.label :altitude
    = f.number_field :altitude
  .field
    = f.label :altitude_accuracy
    = f.number_field :altitude_accuracy
  .field
    = f.label :heading
    = f.number_field :heading
  .field
    = f.label :speed
    = f.number_field :speed
  .actions
    -# #submit.clickable
      submit on js
    #submit.ladda-button{"data-style" => "zoom-in", "data-color" => "blue"}
      %span.ladda-label Submit
